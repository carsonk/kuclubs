extends layout.pug

block content
  .container
    .card
      .card-header Register Club
      .card-block
        form
          .form-group
            label Name
            input.form-control(type='text' placeholder='Name of the club')
          .form-group
            label Description
            textarea.form-control
          .form-group
            label Date Created
            input.form-control(type='date')
          .form-group
            input.btn.btn-primary(type='submit' value='Create')

