extends layout.pug

block content
  .container
    form.card(method='post')
      .card-header Register Club
      .card-block
        .form-group
          label Name
          input.form-control(name='name' type='text' placeholder='Name of the club')
        .form-group
          label Description
          textarea.form-control(name='description')
        .form-group
          label Date Created
          input.form-control(name='dateFounded' type='date')
      .card-footer
        input.btn.btn-primary(type='submit' value='Create')

